//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	int n,x;
	cout<<"Ingrese valores enteros y positivos";
	if (n>0 && x>0)
	{
		cout<<"Ingrese su valor de n: "<<endl;
		cin>>n;
		cout<<"Ingrese su valor de x: "<<endl;
		cin>>x;
		float r=0;
		for (int i=1 ; i<=n; i++)
		{
			r=r+pow((1+(1.0/x)),i);
			cout<<"EL VALOR SERA: "<<r;
		}
	}
	else{
		cout<<"No ingresolos valores correctos";
	
	getch();
}
